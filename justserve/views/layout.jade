doctype html
html
  head
    title Jumbotron Template for Bootstrap
    link(href="stylesheets/bootstrap.css", rel='stylesheet')
      -var selected = 'home'; //default

      -var menu = { 'home': '/home', 'About': '/blog', 'contact': '/contact' };
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') TC Project
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class=path=='home'?'active':undefined)
              a(href='/') Home
            li(class=path=='about'?'active':undefined)
              a(href='/about') About
            li(class=path=='contact'?'active':undefined)
              a(href='/contact') Contact
        // /.navbar-collapse
    .container
     block content
    hr
    footer
     p(class="text-center") Â© 2016 Company, Inc.